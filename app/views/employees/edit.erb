<h1> Update Employee's Information </h1>
<hr>
  <% if @errors %>
    <ul>
    <% @errors.each do |error| %>
    <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>
<main>
  <p><%= form_for @employee do |f| %></p>
  <%= f.label :first_name, "First name" %>
  <%= f.text_field :first_name %><br><hr>
  <%= f.label :last_name, "Last name" %>
  <%= f.text_field :last_name %><br><hr>
  <%= f.label :alias, "Nickname" %>
  <%= f.text_field :alias %><br><hr>
  <%= f.label :title, "Position" %>
  <%= f.text_field :title %><br><hr>
  <%= f.label :office, "Location" %>
  <%= f.text_field :office %><br><hr>
  <%= f.label :img_url, "Profile picture" %>
  <%= f.text_field :img_url %><br><hr>
  <%= f.label :dog_id, "Doggo" %>
  <%= f.collection_select :dog_id, @dogs, :id, :name %><br>
  <hr>
  <%= f.submit "Update Employee" %>
  <% end %>
</main>